loadmodule "extensions/extb_account.la";
loadmodule "extensions/extb_channel.la";
loadmodule "extensions/extb_oper.la";
loadmodule "extensions/extb_realname.la";
loadmodule "extensions/extb_server.la";
#loadmodule "extensions/ip_cloaking.la";
loadmodule "extensions/sno_farconnect.la";
#loadmodule "extensions/sno_globaloper.la";

serverinfo {
	name = "testsuite3.";
	sid = "3TT";
	description = "Testsuite";
	network_name = "Testsuite";
	vhost = "127.0.0.1";
};

admin {
	name = "Here";
	description = "Solanum testsuite server";
	email = "root@localhost";
};

class "users" {
	ping_time = 5 minutes;
	number_per_ip = 100;
	max_number = 200;
	sendq = 100kb;
};

class "server" {
	ping_time = 5 minutes;
	connectfreq = 5 minutes;
	max_number = 3;
	sendq = 5 megabytes;
};

listen { host = "127.0.0.1"; port = 7603; };

auth { user = "*@127.0.0.0/8"; class = "users"; };

operator "oper" {
	user = "*@127.0.0.0/8";
	password = "oper";
	flags = kill, remote, kline, unkline, nick_changes,
		die, rehash, admin, xline, operwall, oper_spy, ~encrypted;
};

connect "testsuite1." {
	host = "127.0.0.1";
	port = 7601;
	send_password = "testsuite";
	accept_password = "testsuite";
	class = "server";
	flags = topicburst;
};

connect "testsuite2." {
	host = "127.0.0.1";
	port = 7602;
	send_password = "testsuite";
	accept_password = "testsuite";
	class = "server";
	flags = topicburst;
};

shared {
	oper = "*@*", "*";
	flags = all;
};

alias "NickServ" {
	target = "NickServ";
};
alias "ChanServ" {
	target = "ChanServ";
};
alias "OperServ" {
	target = "OperServ";
};
alias "MemoServ" {
	target = "MemoServ";
};

service {
	name = "services.";
};
